{
  "manifest_version": 3,
  "name": "浏览器截屏",
  "version": "1.0.0",
  "description": "实现浏览器屏幕截图的插件",
  "icons": {
	"16": "icon.png",
	"48": "icon.png",
	"128": "icon.png"
	},
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
	"default_title": "点击截图"
  },
  "permissions": [
    "activeTab",
	"storage",
	"tabs",
    "downloads"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["js/content.js"]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  }
}
